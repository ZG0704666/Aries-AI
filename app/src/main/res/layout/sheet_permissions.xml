<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/page_padding"
    android:paddingTop="@dimen/inner_padding"
    android:paddingEnd="@dimen/page_padding"
    android:paddingBottom="@dimen/inner_padding"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvPermTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="首次使用权限"
        android:textColor="@color/blue_glass_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPermDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="建议先完成下面权限设置，后续自动化过程将不再弹窗打断。"
        android:textColor="@color/blue_glass_icon"
        android:textSize="13sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inner_padding"
        app:cardCornerRadius="@dimen/card_corner"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/inner_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无障碍服务（必需）"
                        android:textColor="@color/blue_glass_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPermAccStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="状态：未开启"
                        android:textColor="@color/blue_glass_icon"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPermAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:text="去开启"
                    app:cornerRadius="@dimen/button_corner" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="悬浮窗（推荐）"
                        android:textColor="@color/blue_glass_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPermOverlayStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="状态：未开启"
                        android:textColor="@color/blue_glass_icon"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPermOverlay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:text="去设置"
                    app:cornerRadius="@dimen/button_corner" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="麦克风（语音输入）"
                        android:textColor="@color/blue_glass_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPermMicStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="状态：未授权"
                        android:textColor="@color/blue_glass_icon"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPermMic"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:text="授权"
                    app:cornerRadius="@dimen/button_corner" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPermGuide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/inner_padding"
        android:text="一键引导"
        app:cornerRadius="@dimen/button_corner"
        app:iconGravity="textStart"
        app:iconPadding="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPermDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/inner_padding_small"
        android:text="稍后再说"
        app:cornerRadius="@dimen/button_corner"
        app:backgroundTint="?attr/colorSurface"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        android:textColor="?attr/colorOnSurface" />

</LinearLayout>
