<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_glass_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/glass_toolbar_bg"
        android:theme="@style/ThemeOverlay.MaterialComponents.Light"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        app:navigationIconTint="@color/blue_glass_icon"
        app:titleTextColor="@color/blue_glass_text"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:title="自动化" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="已连接 API 后，可在此执行手机自动化任务（最小可用入口）"
        android:textColor="@color/blue_glass_text" />

    <TextView
        android:id="@+id/tvAccStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="6dp"
        android:paddingEnd="16dp"
        android:paddingBottom="6dp"
        android:textColor="@color/blue_glass_text"
        android:text="无障碍状态：未开启" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="前往开启无障碍"
        app:cornerRadius="14dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRefreshAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="刷新状态"
        app:cornerRadius="14dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRunDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:text="执行示例动作"
        app:cornerRadius="14dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxStrokeColor="@color/blue_glass_primary"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入要自动完成的任务（例如：打开设置并进入 Wi‑Fi）"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textColorHint="@color/blue_glass_icon" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartAgent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始（模型驱动）"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/blue_glass_primary"
            app:cornerRadius="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPauseAgent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="暂停"
            android:textColor="@color/blue_glass_text"
            app:backgroundTint="@android:color/white"
            app:strokeColor="@color/blue_glass_primary"
            app:strokeWidth="1dp"
            app:cornerRadius="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopAgent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="停止"
            android:textColor="@android:color/holo_red_dark"
            app:backgroundTint="@android:color/white"
            app:strokeColor="@android:color/holo_red_dark"
            app:strokeWidth="1dp"
            app:cornerRadius="14dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_glass_text"
            android:textSize="12sp" />

    </ScrollView>

</LinearLayout>
