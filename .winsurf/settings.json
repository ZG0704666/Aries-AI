{
    "[kotlin]": {
        "editor.formatOnSave": false,
        "editor.semanticHighlighting.enabled": false,
        "editor.defaultFormatter": "fwcd.kotlin"
    },
    "[java]": {
        "editor.semanticHighlighting.enabled": false,
        "editor.defaultFormatter": "redhat.java"
    },
    "editor.semanticHighlighting.enabled": false,
    "java.server.launchMode": "Disabled",
    "java.enabled": false,
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": false,
    "java.configuration.updateBuildConfiguration": "disabled",
    "java.project.referencedLibraries": [],
    "java.autobuild.enabled": false,
    "java.compile.nullAnalysis.mode": "disabled",
    "gradle.autoDetect": "off",
    "gradle.nestedProjects": false,
    "kotlin.languageServer.enabled": false,
    "kotlin.compiler.enabled": false,
    "kotlin.buildSystem": "none",
    "kotlin.debounceTime": 5000,
    "android.gradle.useAndroidGradlePlugin": false,
    "redhat.telemetry.enabled": false,
    "files.maxMemoryForLargeFilesMB": 4,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.kt": "kotlin",
        "*.kts": "kotlin",
        "*.java": "java",
        "*.gradle": "groovy"
    },
    "files.watcherExclude": {
        "**/.gradle/**": true,
        "**/build/**": true,
        "**/.idea/**": true,
        "**/app/build/**": true,
        "**/.venv/**": true,
        "**/node_modules/**": true
    },
    "search.exclude": {
        "**/.gradle": true,
        "**/build": true,
        "**/.idea": true
    }
}